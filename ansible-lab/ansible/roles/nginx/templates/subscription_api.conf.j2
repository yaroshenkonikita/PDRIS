upstream subscription_api {
    server {{ app_upstream_host }}:{{ app_upstream_port }};
    keepalive 32;
}

server {
    listen {{ nginx_listen_port }} default_server;
    server_name {{ server_name }};

    access_log /var/log/nginx/subscription_api_access.log;
    error_log  /var/log/nginx/subscription_api_error.log;

    location / {
        proxy_http_version 1.1;
        proxy_set_header Connection "";
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_read_timeout 60s;
        proxy_pass http://subscription_api;
    }
}

